---
import MainLayout from "@layouts/MainLayout.astro";
import {HolidayCard} from "@components/cards/HolidayCard";
import {Timer} from "@components/Timer";
import type {Holiday} from "@data/2024/holidays";
import {format} from "@formkit/tempo"

import {actions} from "astro:actions";
import Header from "../../components/shared/Header.astro";
import LongDate from "../../components/LongDate.astro";

const {data} = await actions.GetAllHolidays({}) as { data: Holiday[] };

---

<MainLayout
        title="Todos los feriados de Chile año 2024"
        description="Lista completa de los feriados en Chile para el año 2024"
>
    <Header
            title="Feriados Chile"
            currentYear={2024}
            href="/"
    />
    <div class="container mx-auto p-4">
        <!-- Feriados Generales -->
        <section class="my-8">
            <h2 class="text-2xl font-semibold mb-4">Feriados {format(new Date(), "YYYY", "cl")}</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                {
                    data.map((item: Holiday) => (
                            <HolidayCard holiday={item}/>
                    ))
                }
            </div>
        </section>
    </div>
</MainLayout>